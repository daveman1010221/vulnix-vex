{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vulnix-vex",
  "version": "0.1.0",
  "identifier": "com.vulnix.vex",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "./scripts/build-assets.sh && (cd dist && simple-http-server --port 8080 --index --try-file index.html)",
    "beforeBuildCommand": "./scripts/build-assets.sh"
  },
  "app": {
    "windows": [
      {
        "title": "Vulnix-Vex",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

