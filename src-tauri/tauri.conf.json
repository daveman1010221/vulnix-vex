{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vulnix-vex",
  "version": "0.1.0",
  "identifier": "com.vulnix.vex",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "./scripts/build-assets.sh && (cd dist && simple-http-server --port 8080 --index --try-file index.html)",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Vulnix-Vex",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "appimage",
    "icon": [
      "assets/icons/hicolor/256x256/apps/vulnix-vex.png"
    ],
    "category": "Utility",
    "shortDescription": "Vulnerability Explorer UI",
    "longDescription": "Vulnix VEX is a graphical interface for vulnerability analysis.",
    "resources": [],
    "copyright": "Copyright Â© 2025 David Shepard",
    "publisher": "David Shepard"
  }
}
